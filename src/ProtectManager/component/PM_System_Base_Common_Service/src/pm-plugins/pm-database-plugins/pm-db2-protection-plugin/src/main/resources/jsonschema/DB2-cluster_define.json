{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "DB2集群创建或修改请求体",
  "properties": {
    "uuid": {
      "type": "string",
      "description": "集群uuid",
      "minLength": 1,
      "maxLength": 64
    },
    "name": {
      "type": "string",
      "description": "集群名称",
      "minLength": 1,
      "maxLength": 64,
      "pattern": "^[\\u4e00-\\u9fa5a-zA-Z_]{1}[\\u4e00-\\u9fa5a-zA-Z_0-9-]{0,63}$"
    },
    "type": {
      "type": "string",
      "description": "Database",
      "enum": [
        "Database"
      ]
    },
    "subType": {
      "type": "string",
      "description": "DB2-cluster",
      "enum": [
        "DB2-cluster"
      ]
    },
    "dependencies": {
      "$ref": "classpath:jsonschema/DB2-base.json#/agentDependencies"
    },
    "extendInfo": {
      "type": "object",
      "properties": {
        "clusterType": {
          "type": "string",
          "description": "集群类型",
          "enum": [
            "dpf",
            "powerHA",
            "hadr"
          ]
        }
      },
      "required": [
        "clusterType"
      ]
    }
  },
  "required": [
    "name",
    "type",
    "subType",
    "extendInfo",
    "dependencies"
  ]
}