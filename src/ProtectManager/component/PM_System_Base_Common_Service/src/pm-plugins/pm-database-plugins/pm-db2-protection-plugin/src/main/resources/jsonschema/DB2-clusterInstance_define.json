{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "DB2集群实例创建或修改请求体",
  "properties": {
    "uuid": {
      "type": "string",
      "description": "集群实例UUID",
      "minLength": 1,
      "maxLength": 64
    },
    "name": {
      "type": ["string"],
      "description": "集群实例名称",
      "minLength": 1,
      "maxLength": 64
    },
    "type": {
      "type": "string",
      "description": "资源类型",
      "enum": ["Database"]
    },
    "subType": {
      "type": "string",
      "description": "资源子类型",
      "enum": ["DB2-clusterInstance"]
    },
    "parentUuid": {
      "type": "string",
      "description": "实例所在集群的UUID",
      "minLength": 1,
      "maxLength": 64
    },
    "extendInfo": {
      "type": "object",
      "properties": {
        "isTopInstance": {
          "type": "string",
          "description": "是否是顶层实例，0：否，1：是",
          "enum": ["1"]
        },
        "clusterType": {
          "type": "string",
          "description": "集群类型",
          "enum": [
            "dpf",
            "powerHA",
            "hadr"
          ]
        }
      },
      "required": [
        "isTopInstance",
        "clusterType"
      ]
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "children": {
          "type": "array",
          "items": {
            "$ref": "classpath:jsonschema/DB2-instance_define.json"
          }
        }
      },
      "required": [
        "children"
      ]
    }
  },
  "required": [
    "name",
    "type",
    "subType",
    "parentUuid",
    "extendInfo",
    "dependencies"
  ]
}