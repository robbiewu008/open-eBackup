<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.huawei.oceanprotect</groupId>
        <artifactId>pm-boot-dependencies</artifactId>
        <version>1.0.0</version>
    </parent>

    <groupId>com.huawei.oceanprotect</groupId>
    <artifactId>integration-tests</artifactId>
    <version>0.0.1</version>
    <name>IntegrationTests</name>
    <description>Oceanprotect Integration tests Project</description>

    <properties>
    <tomcat.version>9.0.86</tomcat.version>
    <tomcat.pdmcode>0583524652</tomcat.pdmcode>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <!--{"Spring Boot": "开源软件"} -->
        </dependency>

        <!--测试用例类型，不对外发布-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>IntegrationTests</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

</project>
